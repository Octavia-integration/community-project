<odoo>
    <data>
        <record id="view_hr_timesheet_analysis_report_search" model="ir.ui.view">
            <field name="name">Search for Timesheet Analysis report</field>
            <field name="model">hr.timesheet.analysis.report</field>
            <field name="arch" type="xml">
                <search string="Timesheet Analysis">
                    <field name="employee_id"/>
                    <field name="job_id"/>
                    <field name="employee_company_id"/>
                    <filter name="month" string="This month"
                            domain="[
                                '&amp;',
                                ('date', '>=', (context_today()).strftime('%Y-%m-01')),
                                ('date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                            ]"/>
                    <filter name="last_month" string="Last Month"
                            domain="[
                                '&amp;',
                                ('date', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')),
                                ('date', '&lt;', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                            ]"/>
                    <filter name="month_last_year" string="Same Month Last Year"
                            domain="[
                                '&amp;',
                                ('date', '&gt;=', (context_today() + relativedelta(years=-1, day=1)).strftime('%Y-%m-%d')),
                                ('date', '&lt;', (context_today() + relativedelta(years=-1, months=1, day=1)).strftime('%Y-%m-%d')),
                            ]"/>
                </search>
            </field>
        </record>

        <record id="view_hr_timesheet_analysis_report_pivot" model="ir.ui.view">
            <field name="name">Timesheet Analysis report: Pivot</field>
            <field name="model">hr.timesheet.analysis.report</field>
            <field name="arch" type="xml">
                <pivot string="Timesheet Analysis">
                    <field name="employee_id" type="row"/>
                    <field name="expected_log_time" type="measure" widget="float_time"/>
                    <field name="actual_logged_time" type="measure" widget="float_time"/>
                    <field name="leave_logged_time" type="measure" widget="float_time"/>
                    <field name="invoiceable_logged_time" type="measure" widget="float_time"/>
                    <field name="to_invoice_logged_time" type="measure" widget="float_time"/>
                    <field name="invoiced_logged_time" type="measure" widget="float_time"/>
                    <field name="amount_invoiceable" type="measure" />
                </pivot>
            </field>
        </record>

        <record id="action_hr_timesheet_analysis_report" model="ir.actions.act_window">
            <field name="name">Timesheet Analysis</field>
            <field name="res_model">hr.timesheet.analysis.report</field>
            <field name="view_mode">pivot</field>
            <field name="context">{'search_default_month': True}</field>
        </record>

        <menuitem id="menu_hr_timesheet_analysis_report"
                  parent="hr_timesheet.menu_hr_time_tracking"
                  action="action_hr_timesheet_analysis_report"
                  name="Timesheet Analysis"/>
    </data>
</odoo>
