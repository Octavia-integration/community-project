<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Server action to mark multiple timesheets as invoiceable -->
    <record id="action_mark_as_invoiceable" model="ir.actions.server">
        <field name="name">Mark as Invoiceable</field>
        <field name="model_id" ref="analytic.model_account_analytic_line"/>
        <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
        <field name="state">code</field>
        <field name="code">
if records:
    records.write({'is_invoiceable': True})
        </field>
    </record>

    <!-- Server action to mark multiple timesheets as invoiceable -->
    <record id="action_mark_as_not_invoiceable" model="ir.actions.server">
        <field name="name">Mark as Not Invoiceable</field>
        <field name="model_id" ref="analytic.model_account_analytic_line"/>
        <field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
        <field name="state">code</field>
        <field name="code">
if records:
    records.write({'is_invoiceable': False})
        </field>
    </record>

</odoo>
