<odoo>
    <data>
        <record id="view_hr_expected_log_time_report_search" model="ir.ui.view">
            <field name="name">Search for HR expected log time report</field>
            <field name="model">hr.expected.log.time.report</field>
            <field name="arch" type="xml">
                <search string="Expected Log Time">
                    <field name="calendar_id"/>
                    <filter name="month" string="This month"
                            domain="[
                                '&amp;',
                                ('date', '>=', (context_today()).strftime('%Y-%m-01')),
                                ('date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                            ]"/>
                    <filter name="last_month" string="Last Month"
                            domain="[
                                '&amp;',
                                ('date', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-%d')),
                                ('date', '&lt;', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                            ]"/>
                    <filter name="month_last_year" string="Same Month Last Year"
                            domain="[
                                '&amp;',
                                ('date', '&gt;=', (context_today() + relativedelta(years=-1, day=1)).strftime('%Y-%m-%d')),
                                ('date', '&lt;', (context_today() + relativedelta(years=-1, months=1, day=1)).strftime('%Y-%m-%d')),
                            ]"/>
                </search>
            </field>
        </record>

        <record id="view_hr_expected_log_time_report_pivot" model="ir.ui.view">
            <field name="name">HR Expected Log Time report: Pivot</field>
            <field name="model">hr.expected.log.time.report</field>
            <field name="arch" type="xml">
                <pivot string="Expected Log Time">
                    <field name="calendar_id" type="row"/>
                    <field name="expected_log_time" type="measure" widget="float_time"/>
                </pivot>
            </field>
        </record>

        <record id="action_hr_expected_log_time_report" model="ir.actions.act_window">
            <field name="name">HR Expected Log Time</field>
            <field name="res_model">hr.expected.log.time.report</field>
            <field name="view_mode">pivot</field>
            <field name="context">{'search_default_month': True}</field>
        </record>

        <menuitem id="menu_hr_expected_log_time_report"
                  parent="hr.hr_menu_hr_reports"
                  action="action_hr_expected_log_time_report"
                  name="Expected Log Time"/>
    </data>
</odoo>
