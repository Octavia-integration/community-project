<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_step_tree_view" model="ir.ui.view">
        <field name="name">project_task_step_tree_view</field>
        <field name="model">project.task.step</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="workflow_ids" widget="many2many_tags"/>
                <field name="stage_id"/>
                <field name="previous_step_ids" widget="many2many_tags" domain="[('id' ,'!=', context.get('active_id'))]"/>
                <field name="next_step_ids" widget="many2many_tags" domain="[('id' ,'!=', context.get('active_id'))]"/>
                <field name="is_reopen_available"/>
                <field name="hidden"/>
            </tree>
        </field>
    </record>

    <record id="project_task_step_form_view" model="ir.ui.view">
        <field name="name">project_task_step_form_view</field>
        <field name="model">project.task.step</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Under Development"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="stage_id"/>
                            <field name="is_reopen_available"/>
                            <field name="hidden"/>
                        </group>
                        <group>
                            <field name="previous_step_ids" widget="many2many_tags" domain="[('id' ,'!=', context.get('active_id'))]" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="next_step_ids" widget="many2many_tags" domain="[('id' ,'!=', context.get('active_id'))]" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_task_step_action" model="ir.actions.act_window">
        <field name="name">Task Steps</field>
        <field name="res_model">project.task.step</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Task Steps" id="project_task_step_menuitem" groups="project.group_project_manager"
              parent="project.menu_project_config" sequence="4" action="project_task_step_action"/>
</odoo>
