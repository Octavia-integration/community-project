<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_category_tree" model="ir.ui.view">
        <field name="name">project_task_category_tree</field>
        <field name="model">project.task.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="icon_file" widget="image" class="task_category_icon"/>
                <field name="name"/>
                <field name="workflow_id" options="{'no_create': True, 'no_create_edit':True}"/>
            </tree>
        </field>
    </record>

    <record id="project_task_category_action" model="ir.actions.act_window">
        <field name="name">Task Types</field>
        <field name="res_model">project.task.category</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Task Types" id="project_task_category_menuitem" groups="project.group_project_manager"
              parent="project.menu_project_config" sequence="6" action="project_task_category_action"/>
</odoo>
