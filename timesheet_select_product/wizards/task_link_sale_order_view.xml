<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="task_link_sale_order_form_view" model="ir.ui.view">
            <field name="name">task.link.sale.order.wizard.form</field>
            <field name="model">task.link.sale.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Link Sale Order">
                    <label for="sale_order_id"/>
                    <field name="sale_order_id" options="{'no_create': True, 'no_create_edit':True}" colspan="2"/>
                    <separator string="Tasks" colspan="4"/>
                    <field name='tasks_ids'>
                        <tree string="Selected tasks">
                            <field name="name" readonly="1" />
                            <field name="project_id" readonly="1" />
                            <field name="sale_order_id" readonly="1" />
                        </tree>
                    </field>
                    <footer>
                        <button string="Link Tasks" name="check_link_sale_order" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="link_task_sale_order" model="ir.actions.act_window">
            <field name="name">Link Tasks to SO</field>
            <field name="binding_model_id" ref="project.model_project_task"/>
            <field name="res_model">task.link.sale.order.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="task_link_sale_order_form_view"/>
            <field name="context">{'default_tasks_ids': active_ids}</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
