<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_kanban_inherited" model="ir.ui.view">
        <field name="name">project.project.kanban.inherited</field>
        <field name="model">project.project</field>
        <field name="priority">100</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="id"/>
                    <field name="customer_image"/>
                </xpath>
                <xpath expr="//div[hasclass('o_kanban_primary_left')]" position="inside">
                    <div class="partner_image_box">
                        <img  alt="[The Partner Logo]" t-if="record.customer_image and record.customer_image.raw_value"
                          t-att-src="kanban_image('project.project', 'customer_image', record.id.raw_value)"
                          t-att-title="record.id.value"
                          class="partner_image"/>
                    </div>
                </xpath>
                <xpath expr="//div[hasclass('o_primary')]" position='replace'>
                    <div class="o_primary">
                        <span><a data-type="edit" href="#" class="oe_kanban_action oe_kanban_action_a setting"><t t-esc="record.name.value"/></a></span>
                        <span t-if="record.partner_id.value">
                            <strong><t t-esc="record.partner_id.value"/></strong>
                        </span>
                    </div>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
