<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.timesheet.enhancement</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="hr_timesheet.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='timesheet_rounding']/../.." position="after">
                <div class="o_row">
                    <label class="font-weight-bold" for="timesheet_min_duration_all"/><field name="timesheet_min_duration_all"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
